global_configuration:
{% if registry == 'nodei40'%}
  CONTAINER_REGISTRY: nodei40.englab.juniper.net:5000
  REGISTRY_PRIVATE_INSECURE: True
{% elif registry == 'hub'%}
  CONTAINER_REGISTRY: hub.juniper.net/contrail-nightly
  REGISTRY_PRIVATE_INSECURE: False
  CONTAINER_REGISTRY_USERNAME: JNPR-Customer200
  CONTAINER_REGISTRY_PASSWORD: FSg0vLW^7oM#GZy8Ju*f
{% else %}
  CONTAINER_REGISTRY: ci-repo.englab.juniper.net:5010
  REGISTRY_PRIVATE_INSECURE: True
{% endif %}
provider_config:
  bms:
    ssh_user: root
    ssh_pwd: c0ntrail123
    ntpserver: {{ ntp_server }}
    domainsuffix: local
instances:
  {{ primary.host }}:
    ip: {{ primary.ip }}
    provider: bms
    roles:
      openstack:
      config_database:
      config:
      control:
      analytics_database:
      analytics:
      webui:
{% for control in controls %}
  {{ control.host }}:
    ip: {{ control.ip }}
    provider: bms
    roles:
      openstack:
      config_database:
      config:
      control:
      analytics_database:
      analytics:
      webui:
{% endfor %}
{% for i in range(0, dpdk_computes) %}
  {{ computes[i].host }}:
    ip: {{ computes[i].ip }}
    provider: bms
    roles:
      openstack_compute:
      vrouter:
        PHYSICAL_INTERFACE: bond0.101
        CPU_CORE_MASK: "0xff"
        DPDK_UIO_DRIVER: uio_pci_generic
        HUGE_PAGES: 32000
        AGENT_MODE: dpdk
{% endfor %}
{% for i in range(dpdk_computes, computes|length) %}
  {{ computes[i].host }}:
    ip: {{ computes[i].ip }}
    provider: bms
    roles:
      openstack_compute:
      vrouter:
        PHYSICAL_INTERFACE: bond0.101
        CPU_CORE_MASK: "0xff"
{% endfor %}
contrail_configuration:
  CONTRAIL_VERSION: {{ contrail_version }}
  CLOUD_ORCHESTRATOR: openstack
  RABBITMQ_NODE_PORT: 5673
  ENCAP_PRIORITY: VXLAN,MPLSoUDP,MPLSoGRE
  OPENSTACK_VERSION: {{ openstack_version }}
  AUTH_MODE: keystone
  KEYSTONE_AUTH_URL_VERSION: /v3
kolla_config:
  kolla_globals:
    enable_haproxy: no
  kolla_passwords:
    keystone_admin_password: contrail123
  customize:
    nova.conf: |
      [libvirt]
      virt_type=qemu
      cpu_mode=none
